.use-motion {
  .post {    
    BACKGROUND-COLOR: #FFFFFF;
    padding: 40px 30px 40px 30px;
    border: 1px solid #eaecee;
    margin: 0 0 40px 0;
    position: relative;
  }    
}

.use-motion {
  .archive { 
    opacity: 1;     
    padding: 15px 10px 15px 0
  }    
}

.page-archive {

  .archive-page-counter {
    position: relative;
    top: 3px;
    left: 20px;

    +mobile() {
      top: 5px;
    }
  }

  .posts-collapse {
    position: relative;
    border-left: 1px solid #ECECEC;

    &::after {
      top: 20px;
      left: 0;
      margin-left: -2px;
      width: 4px;
      height: 100%;
      //background: #FFF;
      z-index: $zindex-bottom;
    }

    .archive-move-on {
      position: absolute;
      top: 11px;
      left: 0;
      margin-left: -6px;
      width: 10px;
      height: 10px;
      opacity: 0.5;
      background: $black-light;
      border: 1px solid white;

      circle();
    }

    &::before, &::after {
      content: " ";
      position: absolute;
    }
  }
}