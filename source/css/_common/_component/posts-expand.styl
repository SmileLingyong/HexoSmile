.posts-expand {
  padding-top: 20px;
}

@media (max-width: 767px) {
  .posts-expand {
    margin: 0 20px;
  }

  .post-body {
    pre, .highlight {
      margin: 0 -20px;
      padding: 10px 20px;
      .gutter pre {
        padding-right: 10px;
      }
    }
  }
}

.posts-expand .post-title {
  font-size: 22px;
  text-align: center;
  color: $blue-title;
  word-break: break-word;

  +mobile() {
    font-size: 22px;
  }
}
.posts-expand .post-title-link {
  display: inline-block;
  position: relative;
  color: $blue-title;
  border-bottom: none;
  line-height: 1.2;
  vertical-align: top;

  &::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: $blue-deep;
    visibility: hidden;
    transform: scaleX(0);
    the-transition();
  }

  &:hover::before {
    visibility: visible;
    transform: scaleX(1);
  }

  .fa { font-size: 16px; }
}

.posts-expand .post-meta {
  margin: 10px 0 15px 0;
  color: $blue-link;
  font-size: 12px;
  text-align: center;

  .post-category-list {
    display: inline-block;
    margin: 0;
    padding: 3px;
  }
  .post-category-list-link {
    color: $grey-dark;
  }

}

.posts-expand .post-comments-count {
  +mobile() { display: none; }
}

.posts-expand .post-body {
  +desktop() { text-align: justify; }


  h2, h3, h4, h5, h6 {
    padding-top: 10px;
  }

  img {
    box-sizing: border-box;
    margin: auto;
    padding: 3px;
    //border: 1px solid $gray-lighter;
  }
}

.posts-expand .post-tags {
  margin-top: 40px;
  text-align: center;

  a {
    display: inline-block;
    margin-right: 10px;
    font-size: 13px;
  }
}

.post-nav {
  overflow: hidden;
  margin-top: 60px;
  padding: 10px;
  white-space: nowrap;
  border-top: 1px solid $gains-page;
}

.post-nav-item {
  display: inline-block;
  width: 50%;
  white-space: normal;

  a {
    position: relative;
    display: inline-block;
    line-height: 25px;
    font-size: 14px;
    color: $black-light;
    border-bottom: none;

    &:hover {
      color: $black-deep;
      border-bottom: none;
    }

    &:active {
      top: 2px;
    }

    i { font-size: 12px; }
  }

}

.post-nav-prev {}

.post-nav-next { text-align: right; }

.posts-expand {
  .post-eof {
    display: block;
    //margin: 20px auto 40px;
    width: 100%;
    height: 1px;
    //background: $grey-light;
    text-align: center;
  }
}

.post-more-link { margin-top: 20px; TEXT-ALIGN: RIGHT;}

.posts-expand .fancybox img { margin: 0 auto; }
